<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="먼저 저와 함께 깊은 호흡을 해봅시다"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/textView2" />

    <ImageView
        android:id="@+id/iv_deepbreath"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bluecircle"
        android:layout_marginTop="124dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_breathinout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마쉬고"
        android:layout_alignTop="@+id/iv_deepbreath"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/but_startbreathing_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="계속"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>