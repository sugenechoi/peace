<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/sunimage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="마음을 편안하게 하기 위해 잠시 짧은 명상을 하겠습니다.\n\n\n 이어폰을 연결하시고 준비가 되면 재생 버튼을 누르세요."
        android:layout_alignTop="@+id/iv_playshortmeditation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/iv_playshortmeditation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/playimage"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tv_preshortmeditationlater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나중에"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp" />

</LinearLayout>