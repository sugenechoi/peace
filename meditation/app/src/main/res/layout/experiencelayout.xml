<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.soojinchoi.meditation.experience"
    android:weightSum="1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="명상을 해보신 적이 있나요?"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true">

        <TableRow>
            <Button
                android:id="@+id/but_ex1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="오늘이 첫 시작인 초보자" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/but_ex2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="몇 번 해본 적 있는 경험자" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/but_ex3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="명상을 많이 하는 명상러버" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/but_ex_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="계속"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>